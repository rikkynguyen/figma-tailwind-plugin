{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["@figma/plugin-typings"],
    "outDir": "dist"
  },
  "include": ["src", "code.ts"],
  "exclude": ["node_modules"]
}
